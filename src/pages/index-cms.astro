---
// Page Gastronomade avec intégration Sanity CMS
import MainLayout from '../layouts/MainLayout.astro';
import PricingCard from '../components/PricingCard.astro';
import { getRestaurantData, getLocationsData } from '../lib/sanity';

// Récupération des données Sanity
const restaurantData = await getRestaurantData();
const locationsData = await getLocationsData();

// Données par défaut si Sanity n'est pas disponible
const defaultRestaurant = {
  title: "Soirée Gastronomique d'Hiver",
  dates: ["2026-03-05", "2026-04-09", "2026-05-21", "2026-06-11"],
  price: 50,
  menuDescription: "Menu unique du chef avec produits frais et locaux",
  isFull: false,
  minGuests: 4,
  depositAmount: 25
};

const defaultSociete = {
  title: "Réunions d'entreprise & Team-Buildings",
  price: "400€",
  features: [
    "Cadre inspirant et chaleureux",
    "Cuisine entièrement équipée",
    "Parking privé",
    "Accès facile via E411"
  ]
};

const defaultPrive = {
  title: "Événements privés",
  price: "400€",
  features: [
    "Anniversaires et célébrations",
    "Réunions de famille",
    "Dîners entre amis",
    "Espace privatif et cosy"
  ]
};

// Utilisation des données Sanity avec fallbacks
const restaurant = restaurantData?.[0] || defaultRestaurant;
const societeLocation = locationsData?.find(loc => loc.type === 'societe');
const priveLocation = locationsData?.find(loc => loc.type === 'prive');

const societe = societeLocation || defaultSociete;
const prive = priveLocation || defaultPrive;
---

<MainLayout title="Gastronomade - Manger Vrai | Muriel Cruysmans">
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-beige-creme to-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-6xl font-serif font-bold text-vert-foret mb-6">
        Gastronomade
      </h1>
      <p class="text-xl md:text-2xl text-gray-700 mb-8 max-w-3xl mx-auto">
        Découvrez l'art de manger vrai avec Muriel Cruysmans à Wavre
      </p>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Un espace chaleureux et inspirant pour vos événements, cours de cuisine et moments gourmands
      </p>
    </div>
  </section>

  <!-- Gastronomade Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-vert-foret mb-4">
          Location de l'Espace "La Zboum"
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Un cadre inspirant pour vos réunions d'entreprise, événements privés et soirées gourmandes
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Priority 1: Sociétés -->
        <PricingCard
          title="Sociétés"
          subtitle={societe.title}
          price={societe.price}
          period="HTVA"
          features={societe.features}
          priority="1"
          ctaText="Réserver pour mon équipe"
          ctaLink="#contact"
        />

        <!-- Priority 2: Privé -->
        <PricingCard
          title="Privé"
          subtitle={prive.title}
          price={prive.price}
          period="HTVA"
          features={prive.features}
          priority="2"
          ctaText="Organiser mon événement"
          ctaLink="#contact"
        />

        <!-- Priority 3: Restaurant -->
        <PricingCard
          title="Restaurant"
          subtitle={restaurant.title}
          price={restaurant.price.toString()}
          period="/pers."
          features={[
            restaurant.menuDescription,
            `Réservation minimum ${restaurant.minGuests} personnes`,
            `Acompte de ${restaurant.depositAmount}€/pers.`,
            restaurant.isFull ? "Complet" : "Places disponibles"
          ]}
          priority="3"
          ctaText="Voir les dates disponibles"
          ctaLink="#restaurant-dates"
          highlight={!restaurant.isFull}
        />
      </div>

      <!-- Restaurant Dates -->
      <div id="restaurant-dates" class="mt-12 bg-beige-creme rounded-lg p-8">
        <h3 class="text-2xl font-serif font-bold text-vert-foret mb-6 text-center">
          Prochaines soirées Gastronomade
        </h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
          {restaurant.dates.map(date => {
            const dateObj = new Date(date);
            const formattedDate = dateObj.toLocaleDateString('fr-BE', {
              weekday: 'long',
              day: 'numeric',
              month: 'long',
              year: 'numeric'
            });
            return (
              <div class={`bg-white rounded-lg p-4 text-center shadow-sm ${restaurant.isFull ? 'opacity-50' : ''}`}>
                <div class="text-vert-foret font-semibold capitalize">{formattedDate.split(' ')[0]}</div>
                <div class="text-gray-600">{formattedDate.split(' ').slice(1).join(' ')}</div>
                {restaurant.isFull && <div class="text-red-500 text-sm mt-1">Complet</div>}
              </div>
            );
          })}
        </div>
        <div class="text-center mt-6">
          <p class="text-gray-600 mb-4">
            Réservation minimum {restaurant.minGuests} personnes • Acompte {restaurant.depositAmount}€/personne
          </p>
          {!restaurant.isFull ? (
            <a href="/contact" class="inline-block bg-vert-foret text-white px-6 py-3 rounded-lg font-medium hover:bg-vert-foret-doux transition-colors">
              Réserver ma table
            </a>
          ) : (
            <p class="text-gray-500">Toutes les dates sont complètes pour le moment</p>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-16 bg-vert-foret-doux">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-6">
        Prêt à vivre une expérience gastronomique unique ?
      </h2>
      <p class="text-xl text-white/90 mb-8">
        Contactez Muriel pour réserver votre espace ou découvrir ses services
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-vert-foret px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
          Me contacter
        </a>
        <a href="/about" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-vert-foret transition-colors">
          En savoir plus
        </a>
      </div>
    </div>
  </section>
</MainLayout>

  <!-- Gastronomade Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-vert-foret mb-4">
          Location de l'Espace "La Zboum"
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Un cadre inspirant pour vos réunions d'entreprise, événements privés et soirées gourmandes
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Sociétés -->
        <div class="bg-white rounded-lg shadow-lg p-6 border-2 border-vert-foret">
          <h3 class="text-xl font-bold mb-2">Sociétés</h3>
          <p class="text-2xl font-bold text-vert-foret">{societe.price} HTVA</p>
          <p>{societe.title}</p>
        </div>

        <!-- Privé -->
        <div class="bg-white rounded-lg shadow-lg p-6 border-2 border-gray-200">
          <h3 class="text-xl font-bold mb-2">Privé</h3>
          <p class="text-2xl font-bold text-vert-foret">{prive.price} HTVA</p>
          <p>{prive.title}</p>
        </div>

        <!-- Restaurant -->
        <div class="bg-white rounded-lg shadow-lg p-6 border-2 border-gray-200">
          <h3 class="text-xl font-bold mb-2">Restaurant</h3>
          <p class="text-2xl font-bold text-vert-foret">{restaurant.price}€/pers.</p>
          <p>{restaurant.title}</p>
        </div>
      </div>

      <!-- Restaurant Dates -->
      <div id="restaurant-dates" class="mt-12 bg-beige-creme rounded-lg p-8">
        <h3 class="text-2xl font-serif font-bold text-vert-foret mb-6 text-center">
          Prochaines soirées Gastronomade
        </h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
          {restaurant.dates.map(date => {
            const dateObj = new Date(date);
            const formattedDate = dateObj.toLocaleDateString('fr-BE', {
              weekday: 'long',
              day: 'numeric',
              month: 'long',
              year: 'numeric'
            });
            return (
              <div class={`bg-white rounded-lg p-4 text-center shadow-sm ${restaurant.isFull ? 'opacity-50' : ''}`}>
                <div class="text-vert-foret font-semibold capitalize">{formattedDate.split(' ')[0]}</div>
                <div class="text-gray-600">{formattedDate.split(' ').slice(1).join(' ')}</div>
                {restaurant.isFull && <div class="text-red-500 text-sm mt-1">Complet</div>}
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </section>
</MainLayout>